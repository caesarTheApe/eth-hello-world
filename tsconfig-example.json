{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./scripts", "./test"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [ "./src", "./scripts"],
  "exclude": ["node_modules", "dist"],
  "files": ["./hardhat.config.ts"]
}
